<% provide(:title, 'Create new post') %>
<h1>Create new post in this room</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@post) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= f.label :url %>
      <%= f.text_field :url %>

      <%= f.label :content %>
      <%= f.text_field :content %>	
   
      <%= f.submit "Create new post", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
