<h1>Listing invitations</h1>

<table>
  <tr>
    <th>Room</th>
    <th>Sender</th>
    <th>Token</th>
    <th>Sent at</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @invitations.each do |invitation| %>
  <tr>
    <td><%= invitation.room_id %></td>
    <td><%= invitation.sender_id %></td>
    <td><%= invitation.token %></td>
    <td><%= invitation.sent_at %></td>
    <td><%= link_to 'Show', invitation %></td>
    <td><%= link_to 'Edit', edit_invitation_path(invitation) %></td>
    <td><%= link_to 'Destroy', invitation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

